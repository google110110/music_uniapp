  display: -webkit-flex;
  display: flex;
  line-height: 100rpx;
}
.song-box > view {
  margin-right: 20rpx;
}
.song-box .song-img {
  margin-left: 20rpx;
  width: 140rpx;
  height: 140rpx;
  overflow: hidden;
  border-radius: 14rpx;
}
.song-box .song-img image {
  width: 100%;
  height: 100%;
  border-radius: 14rpx;
}
