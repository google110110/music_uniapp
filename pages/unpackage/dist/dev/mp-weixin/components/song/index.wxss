.sl {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.song-box {
  height: 161rpx;
  width: 750rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 10rpx 10rpx;
  border-radius: 14rpx;
